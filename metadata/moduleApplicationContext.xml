<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>
	
    <bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.nbsmodule.NBSService</value> <!-- service interface name -->
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.nbsmodule.impl.NBSServiceImpl">
							<property name="NBSModuleDAO">
								<bean class="org.openmrs.module.nbsmodule.db.hibernate.HibernateNBSModuleDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
							
							
						
							
						</bean>
					</property>
					<property name="preInterceptors">
						<list>
							<ref bean="authorizationInterceptor"/>
						</list>
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<bean id="logicProviderDAO" class="org.openmrs.module.nbsmodule.datasource.HibernateLogicProviderDAO">
		<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
	</bean>
	<bean id="providerDataSource" class="org.openmrs.module.nbsmodule.datasource.ProviderDataSource">
		<property name="logicProviderDAO"><ref bean="logicProviderDAO"></ref></property>
	</bean>
	<bean parent="logicServiceTarget">
 		<property name="logicDataSources">
  		<map>
			<entry key="provider"><ref bean="providerDataSource" /></entry>
  		</map>
 		</property>
	</bean> 
	
</beans>
